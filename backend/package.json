{
  "name": "@blocksight/backend",
  "private": true,
  "version": "0.0.0",
  "description": "Express + ws backend for BlockSight.live",
  "dependencies": {
    "cors": "*",
    "dotenv": "*",
    "electrum-client": "*",
    "express": "*",
    "express-rate-limit": "*",
    "helmet": "*",
    "ioredis": "*",
    "pino": "*",
    "ws": "*",
    "zod": "*"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.0.0",
    "@eslint/js": "^9.0.0",
    "@types/cors": "*",
    "@types/express": "*",
    "@types/jest": "*",
    "@types/node": "*",
    "@types/supertest": "*",
    "@types/ws": "*",
    "eslint": "*",
    "eslint-config-prettier": "*",
    "@typescript-eslint/eslint-plugin": "*",
    "@typescript-eslint/parser": "*",
    "jest": "*",
    "ts-jest": "*",
    "prettier": "*",
    "supertest": "*",
    "ts-node": "*",
    "tsconfig-paths": "*",
    "typescript": "*",
    "nodemon": "*"
  },
  "scripts": {
    "dev": "nodemon --watch src --ext ts --exec ts-node --transpile-only src/server.ts",
    "start": "node dist/server.js",
    "build": "tsc -p tsconfig.json",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint .",
    "test": "jest --runInBand --config ./jest.config.js --detectOpenHandles",
    "test:bootstrap": "jest --runInBand --config ./jest.config.js --testPathPattern=bootstrap --detectOpenHandles",
    "test:bootstrap:unit": "jest --runInBand --config ./jest.config.js --testPathPattern=bootstrap.controller.test.ts --detectOpenHandles",
    "test:bootstrap:integration": "jest --runInBand --config ./jest.config.js --testPathPattern=bootstrap.integration.test.ts --detectOpenHandles",
    "test:bootstrap:real-connections": "jest --runInBand --config ./jest.config.js --testPathPattern=bootstrap.real-connections.test.ts --detectOpenHandles",
    "test:bootstrap:performance": "jest --runInBand --config ./jest.config.js --testPathPattern=bootstrap.performance.test.ts --detectOpenHandles",
    "test:bootstrap:coverage": "jest --runInBand --config ./jest.config.js --testPathPattern=bootstrap --coverage --detectOpenHandles"
  }
}
